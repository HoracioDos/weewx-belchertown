[clima]
    title = "Valores Climatológicos Medios 2018-2019"
    show_button = true
    button_text = Clima 2018-2019
    type = spline
    time_length = year_specific
    year_specific = 2018
    aggregate_type = max
    aggregate_interval = 86400 # 1 day
    gapsize = 86400000
    xaxis_groupby = month
    xaxis_categories = 'Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'

    [[chart1]]
        title = "Valores Climatológicos Medios 2018"
        [[[outTemp]]]
           zIndex = 1
           name = Temperatura Máx
           color = red
        [[[outTemp_min]]]
           name = Temperatura Mín
           observation_type = outTemp
           aggregate_type = min
           color = "#7cb5ec"
        [[[rainTotal]]]
           name = Precipitación Acumulada
           type = column
           yAxis = 1
           zIndex = -1

    [[chart2]]
        title = "Valores Climatológicos Medios 2019"
        type = spline
        time_length = year
        aggregate_type = max
        aggregate_interval = 86400 # 1 day
        gapsize = 86400000
        xaxis_groupby = month
        xaxis_categories = 'Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'
        [[[outTemp]]]
            zIndex = 1
            name = Temperatura Máx
            color = red
        [[[outTemp_min]]]
            name = Temperature Mín
            observation_type = outTemp
            aggregate_type = min
            color = "#7cb5ec"
        [[[rainTotal]]]
